<h1>My Recipes</h1>

<div class='no-recipes'>
  <%= "No recipes available." if @recipes.empty? %>
</div>

<div class='add-recipe'>
  <%= link_to "Add Recipe", new_recipe_path, class: "btn-add-recipe" %>
</div>

<% if @recipes.any? %>
  <ul class="recipe-list">
    <% @recipes.each do |recipe| %>
      <li>
        <div class="recipe-info">
          <div class="recipe-name">
            <%= recipe.name %>
          </div>
          <div class="recipe-actions">
            <%= link_to "Remove", recipe_path(recipe), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?" }, class: "btn-remove-recipe" %>
          </div>
        </div>
        <div class="recipe-description">
          <%= recipe.description %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>