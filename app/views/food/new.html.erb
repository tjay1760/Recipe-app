    <%= stylesheet_link_tag "food", "data-turbo-track": "reload" %>

<%= form_with model: @food, url: food_index_path, method: :post, local: true, class: 'form-add-food', scope: :food do |form| %>
<h1>Add a new food</h1>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>
  <%= form.label :measurement_unit %>
  <%= form.select :measurement_unit, options_for_select(['grams','units','liters']), required: true %>
 <%= form.label :price %>
  <%= form.text_field :price,type: "number", step: "0.001", required: true %>
  <%= form.label :quantity %>
  <%= form.number_field :quantity, required: true, min: 1 %>
  <%= form.submit 'Add', class: 'btn-addfood add' %>
<% end %>
